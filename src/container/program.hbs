{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>
  {{#with program}}
    <h1>{{excursion.name}}</h1>
    <p>Location: {{excursion.location.city}}, {{excursion.location.country}}</p>
    <p>Date: {{excursion.date}}</p>
  {{/with}}

  <h2>Program</h2>
  {{#each program.excursion.program}}
    <div>
      <h2>{{name}}</h2>
      <p>Type: {{type}}</p>
      <p>Duration: {{duration}} hours</p>
      {{#if details.museum}}
        <h3>Museum Visit</h3>
        <p>Name: {{details.museum.name}}</p>
        <p>Location: {{details.museum.location.address}}, {{details.museum.location.city}}, {{details.museum.location.country}}</p>
        {{#each details.museum.exhibits}}
          <div>
            <h4>{{name}}</h4>
            <p>Artist: {{#if artist}}{{artist}}{{else}}Unknown{{/if}}</p>
            <p>Description: {{description}}</p>
            <p>Audio Guide: {{#if audio_guide}}Yes{{else}}No{{/if}}</p>
          </div>
        {{/each}}
      {{/if}}
      {{#if details.venue}}
        <h3>Cultural Show</h3>
        <p>Venue: {{details.venue.name}}</p>
        <p>Location: {{details.venue.location.address}}, {{details.venue.location.city}}, {{details.venue.location.country}}</p>
        {{#each details.performers}}
          <div>
            <h4>{{name}}</h4>
            <p>Type: {{type}}</p>
          </div>
        {{/each}}
      {{/if}}
      <h3>My Guide</h3>
      <p><b>Name:</b> Sophie</p>
      <p><b>Language:</b>English</p>
      <p><b>Rating:</b>4.6</p>
    </div>
  {{/each}}
</div>



