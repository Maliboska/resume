<!DOCTYPE html>
<html>
    <main class="p-5">
        <div class="row">
            <div class="col-12 mb-3">
                <div class="nav">
                    {{#with navigation}}
                        {{#each links}} 
                            <div class="nav-item">
                                <a href="{{href}}" class="nav-link home"
                                class="m-1 text-decoration-none 
                                {{#if @last}} nav-link disabled
                                {{/if}}">{{text}}</a>
                            </div>
                        {{/each}}
                        <hr>
                    {{/with}}
                </div>
            </div>
        </div> 
                   
        <div>
           <hr>
        </div>
        <head>
            <h1 class="text-bg">{{header}}</h1>
        </head>
        <div class="row">
            {{#with contacts_data}}
                <h3>{{title}}</h3>
                <div class="col-6">
                    {{#each buttons}}
                       <button  class="btn d-flex my-1 {{#if isPrimary}}
                       btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}}">{{text}}</button>
                    {{/each}}
                </div>
                <br>
                <hr>
                <br>
                {{#with form}} 
                    <div class="row">
                        {{#with input}}
                            <div class="col-6">
                                {{#with surname}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control"{{placeholder}}> 
                                    <div class="form-text text-danger">{{caption}}</div>
                                {{/with}}
                                {{#with phone}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control"{{placeholder}}> 
                                    <div class="form-text text-danger">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6">
                                {{#with name}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control"{{placeholder}}> 
                                    <div class="form-text text-danger">{{caption}}</div>
                                {{/with}}
                                {{#with email}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control"{{placeholder}}> 
                                    <div class="form-text text-danger">{{caption}}</div>
                                {{/with}}
                            </div>    
                       {{/with}}
                    </div>
                {{/with}}    
                <br>
                <hr>
                <br>
                <div class="col-6">
                    {{#each switch}}
                        <div class="form-check form-switch">
                           <label class="form-check-label">{{text}}</label>
                           <input type="checkbox" class="form-check-input">
                       </div>
                    {{/each}}
                </div>         
            {{/with}}
        </div>
        <br>
        <div class="col-8">    
            {{#each action_block}}
                <div class="col-4">
                    <button  class="btn d-flex my-1 {{#if isSuccess}}
                    btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}}
                    {{#if isInfo}}btn-info text-light{{/if}}">{{text}}</button>
                </div>
            {{/each}}
        </div>
        <br>
        {{#with total}}
            <h4>{{title}}</h4>
            {{#each item_list}}
               <div>{{name}}: {{price}}</div>
            {{/each}}
            <br>
            {{#each additional_info}}
               <div>{{text}}: {{value}}</div>
            {{/each}}
            <br>
            {{#each total_price}}
                <h5>{{text}}</h5>
                <div>{{value}}</div>  
            {{/each}}
            {{#each button}}
                <button class="d-flex my-1 btn {{#if isPrimary}}btn-primary{{/if}}
                {{#if isOutline}}btn-outline-primary{{/if}}">{{text}}</button>
            {{/each}} 
        {{/with}}
        <br>
        <br>
        {{#with delivery}}
           <h3>{{title}}</h3>
            <div class="card row col-12">
                <div class="col-4">
                    {{#each select}}
                        <label class="form-label">{{label}}</label>
                        <select class="form-select">
                            <option selected class="text-secondary">{{placeholder}}</option>
                            {{#each options}} 
                               <option value="value" class="text-dark">{{text}}<br></option>
                            {{/each}}
                        </select>   
                    {{/each}}
                </div>
            </div>
            <br>    
            {{#each delivery_type}}
                <div class="form-check">
                    <label class="form-check-label">{{type}}</label>
                    <input type="radio" class="form-check-input">
                </div>
            {{/each}}
            {{#with payment}}
                <h4>{{title}}</h4>
                {{#each list}}
                    <div class="form-check">
                       <label class="form-check-label">{{type}}</label>
                       <input type="radio" class="form-check-input">
                       <div class="form-text text-secondary">{{description}}</div>
                    </div>
                {{/each}}
            {{/with}}
            <div class="row">
                {{#with contact}}
                   <h3>{{title}}</h3>
                   <div class="col-6">
                        {{#with surname}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control"{{placeholder}}> 
                            <div class="form-text text-danger">{{caption}}</div>
                        {{/with}}
                        {{#with phone}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control"{{placeholder}}> 
                            <div class="form-text text-danger">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6">    
                        {{#with name}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control"{{placeholder}}> 
                            <div class="form-text text-danger">{{caption}}</div>
                        {{/with}}
                        {{#with email}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control"{{placeholder}}> 
                            <div class="form-text text-danger">{{caption}}</div>
                        {{/with}}
                    </div>
                {{/with}}
            </div>         
        {{/with}}
        <br>
        {{#with coupon}}
            <h4>{{title}}</h4>
            {{#with select}}
                {{#with availabel_coupon}}
                    <label class="form-label">{{label}}</label>
                    <select class="form-select">
                        <option selected class="text-secondary">{{placeholder}}</option>
                        {{#each options}} 
                            <option value="value" class="text-dark">{{text}}<br></option>
                        {{/each}}
                    </select>   
                {{/with}}
                {{#with friend_coupon}}
                    <label class="form-label">{{label}}</label>
                    <select class="form-select">
                        <option selected class="text-secondary">{{placeholder}}</option>
                        {{#each options}} 
                            <option value="value" class="text-dark">{{text}}<br></option>
                        {{/each}}
                    </select>   
                {{/with}}
            {{/with}}
            {{#with add}}
                {{#with friend}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control"{{placeholder}}> 
                    <div class="form-text text-danger">{{caption}}</div>
                {{/with}}
                {{#with colleague}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control"{{placeholder}}> 
                    <div class="form-text text-danger">{{caption}}</div>
                {{/with}}
            {{/with}}
        {{/with}}
        {{#with quiz}}
            <h3>{{title}}</h3>
            {{#with preference}}
                <h5>{{title}}</h5>
                {{#each options}}
                    <div class="form-check">
                       <label class="form-check-label">{{this}}</label>
                       <input type="radio" class="form-check-input">
                    </div>
                {{/each}}
            {{/with}}
            <br>
            {{#with your_expirience}}
                <label class="form-label">{{label}}</label>
                <input  class="form-control form-control-lg">
            {{/with}}
            <br>
            {{#with purchase_frequency}}
                <label class="form-label">{{label}}</label>
                    <select class="form-select">
                        <option selected class="text-secondary">{{placeholder}}</option>
                        {{#each options}} 
                            <option value="value" class="text-dark">{{text}}<br></option>
                        {{/each}}
                    </select>   
            {{/with}}
            <br>
            {{#with factors}}
                <h5>{{title}}</h5>
                {{#each options}}
                    <div class="form-check">
                       <label class="form-check-label">{{this}}</label>
                       <input type="checkbox" class="form-check-input">
                    </div>
                {{/each}}
            {{/with}}
        {{/with}}         
    </main>    
    <hr>
    <footer>
        <div class="py-5 ps-5">
            <div class="row g-4">
                {{#each footer}}
                    <div class="col-2">
                        {{#each this}}
                            <div>
                                <a href="{{this.link}}" 
                                class="m-1 text-decoration-none 
                                {{#if @last}} nav-link disabled 
                                {{/if}}">{{this.text}}</a>
                            </div>
                        {{/each}}
                    </div>
                {{/each}}         
            </div> 
        </div>      
    </footer>
</html>