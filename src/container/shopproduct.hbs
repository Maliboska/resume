
<!DOCTYPE html>
<html>
    <main class="p-5">
        <div class="row">
            <div class="col-12 mb-3">
                <div class="nav">
                    {{#with navigation}}
                        {{#each links}} 
                            <div class="nav-item">
                                <a href="{{href}}" class="nav-link home">{{text}}</a>
                            </div>
                        {{/each}}
                        <hr>
                    {{/with}}
                </div>
            </div>
        </div>            
        <br>
        <hr>
        <br> 
        <nav>
           <ol class="breadcrumb">
                {{#each breadcrumb}}
                    <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
                {{/each}}
            </ol>
        </nav>               
        <br>
        <hr>
        <br>
        {{#with productData}}
            <div class="row col-12">
                <div class="col-6">
                    <div class="card">
                        <img class="card img-top" src="{{img}}">
                        {{#with info}}
                            <h5 class="card title">{{title}}</h5>
                            <p>{{about}}</p>
                            <div>{{price}}</div>
                            {{#with category}}
                                <h5><span class="badge text-bg-warning rounded-pill ">Hot</span>
                                <span class="badge text-bg-primary rounded-pill">New</span>
                                <span class="badge text-bg-info rounded-pill">Bonus</span></h5>
                            {{/with}}
                       {{/with}}
                    </div>
                </div>    
                <br>
                <div class="col-6 g-5 ">
                    <table class="table table-striped table-bordered text-bg-light">
                      {{#with item}}
                            <thead>
                                <tr>
                                    {{#each head}}
                                        <th>{{this}}</th> 
                                    {{/each}}  
                                </tr>
                            </thead>
                            <tbody>   
                                {{#each body}}
                                    <tr>
                                        {{#each this}}
                                           <td>{{this}}</td>
                                        {{/each}}
                                    </tr>
                                {{/each}}     
                           </tbody>
                       {{/with}}       
                    </table>

                    <br>
                    {{#with param}}
                        <div class="card">
                            <h5 class="card-header">{{title}}</h5>
                            {{#each list}}
                              <li class="list-group-item p-2 ps-3">{{this}}</li>
                            {{/each}} 
                        </div>
                    {{/with}}
                    <br>
                    <br>
                    {{#with alert}}
                        <div class="card p-4 text-bg-secondary">
                            <h5 class="text-danger">{{text}}</h5>
                        </div> 
                    {{/with}}
                    <br>
                    <br>   
                </div>
                <br>
                <br>
                <hr>
                <br>
                <br>
                <div class="card">
                    {{#with actionList}}
                        <div class="row col-8">
                            <div class="col-3 g-2">
                                <button class="btn btn-warning">Buy</button>
                            </div>
                            <div class="col-3 g-2">
                                <button class="btn btn-outline-danger">Add to cart</button>
                            </div>
                            <div class="col-3 g-2">
                                <button class="btn btn-success">Like</button>
                            </div>
                            <div class="col-3 g-2">
                                <button class="btn btn-outline-success">Share</button>
                            </div> 
                        </div>        
                   {{/with}}   
                </div>       
            </div>  
        {{/with}}
        <br>
        <hr>
        <br>
        {{#with goodsOtherBlock}}
            <h2 class="header text-center">{{title}}</h2>
            <div class="row col-12">
                {{#each cards}}
                    <div class="col-4 gy-2 gx-3">
                        <div class="card text-bg-secondary">
                           <img class="card img-top" src="{{image}}">
                           <h5>{{title}}<span class="badge text-bg-warning rounded-pill ">Hot</span>
                               <span class="badge text-bg-primary rounded-pill">New</span></h5>
                           <p>{{description}}</p>
                        </div>
                    </div>    
                {{/each}}  
            </div> 
        {{/with}}
        <br>
        <hr>
        <br>
        {{#with service}}
            <div class="row col-12">
                <div class="card text-bg-success text-center">  
                    <h2 class="heating">{{title}}</h2>
                    <p>{{description}}</p>
                    <div class="col-12">
                        {{#each buttons}}
                            <button class="btn btn-primary  text-center">
                                <a href="{{link}}">
                                    <h5 class="text-light">{{rel}}</h5>
                                </a>   
                            </button>
                        {{/each}}    
                    </div>
                    <br>   
                </div> 
            </div>
        {{/with}}
    </main>    
        <br>
        <hr>
        <br>
    <footer>
        <div class="py-5 ps-5">
            <div class="row g-4">
                {{#each footer}}
                    <div class="col-2">
                        {{#each this}}
                            <div>
                                <a href="{{this.link}}" 
                                class="m-1 text-decoration-none 
                                {{#if @last}} nav-link disabled 
                                {{/if}}">{{this.text}}</a>
                            </div>
                        {{/each}}
                    </div>
                {{/each}}         
            </div> 
        </div>      
    </footer>
</html>        
        
            