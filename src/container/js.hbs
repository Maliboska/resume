{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<body>
   <header>
        <h1>{{name}}</h1>
        <p>{{discription}}</p>
   </header>
   
    <main>
        <section id="history">
            <h2>History</h2>
            <p>JavaScript was created by {{history.founder}} in {{history.year}}.</p>
        </section>
        <section id="types">
            <h2>Data Types</h2>
            <ul>
                {{#each types}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </section>
        <section id="syntax">
            {{#with syntax}}
               <h2>Syntax</h2>
               <h3>Variables:</h3>
               <ul>
                   {{#each variables}}
                      <li>{{this}}</li>
                   {{/each}}
               </ul>
               <h3>Functions:</h3>
               <ul>
                   {{#each functions}}
                       <li>{{this}}</li>
                   {{/each}}
               </ul>
               <h3>Conditionals:</h3>
               <ul>
                   {{#each conditionals}}
                       <li>{{this}}</li>
                   {{/each}}
               </ul>
               <h3>Loops:</h3>
               <ul>
                   {{#each loops}}
                       <li>{{this}}</li>
                   {{/each}}
                </ul>
                <h3>Classes:</h3>
                <ul>
                    {{#each classes}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            {{/with}}
        </section>

        <section id="features">
            <h2>Features</h2>
            <ul>
               {{#each features}}
                    <li>{{this}}</li>
               {{/each}}
            </ul>
        </section>
        <section id="libraries">
            <h2>Libraries</h2>
            <ul>
                {{#each libraries}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </section>
        <section id="tools">
            <h2>Tools</h2>
            <ul>
               {{#each tools}}
                    <li>{{this}}</li>
               {{/each}}
            </ul>
        </section>
        <section id="community">
            <h2>Community</h2>
            <ul>
                {{#each community}}
                    <li>{{this.name}} ({{this.type}})</li>
                {{/each}}
            </ul>
        </section>
    </main>
</body>

       

